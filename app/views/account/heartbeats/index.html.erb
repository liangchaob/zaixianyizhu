<div class="row">
  <div class="col-md-12">

    <!-- 导航条 -->
    <%= render "common/tabsforheartbeat" %>

    <!-- 信件表单 -->
    <div class="col-md-8">
      <hr>
      <h3>修改配置</h3>
      <br>

      <%= simple_form_for  [:account, @heartbeat] do |h| %>
      
        <p>
          
          <%= h.input :contact_way, label: '心跳方式', collection: [["邮件", "email"], ["短信", "sms"]],:selected => @heartbeat.contact_way,input_html: { class: "form-control"} %>
        </p>
        <p>
        <%= h.input :interval, label: '心跳间隔', collection: [['30天', 30], ['90天', 90],['180天', 180]],:selected => @heartbeat.interval,input_html: { class: "form-control"} %>
        </p>
        <p>
        <%= h.input :timeout, label: '心跳超时', collection: [['30天', 30], ['90天', 90],['180天', 180]],:selected => @heartbeat.timeout,input_html: { class: "form-control"} %>
        </p>
        <%#= f.input :content, label: '邮件内容',input_html: { class: "form-control" ,rows: 10} %>
        <%= h.submit "提交", class: "btn btn-primary btn-lg", data: { disable_with: "更新中..." } %>
     
      
    <% end %>
    </div>    
    <!-- 信件条目 -->


    <!-- 提示信息 -->
    <div class="col-md-4">
      <h1>提示</h1>
    </div>
    <!-- 提示信息 -->



  </div>
</div>